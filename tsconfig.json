{
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "esnext",
        "jsx": "react",
        "strict": true,
        "typeRoots": [
            "./src/types/*.ts"
        ],
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "build",
        "coverage",
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "./**/__tests__/*"
    ]
}